<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agung.cobafragment.MainActivity">

    <Button
        android:id="@+id/BtnSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="65dp"
        android:inputType="number"
        android:text="Button"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/TxtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BtnSaldo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="40sp"
        android:inputType="number"
        android:layout_alignRight="@+id/TxtTarik"
        android:layout_alignEnd="@+id/TxtTarik" />

    <EditText
        android:id="@+id/TxtTarik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TxtSaldo"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/BtnTarik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/BtnSaldo"
        android:layout_alignRight="@+id/BtnSaldo"
        android:layout_alignTop="@+id/TxtTarik"
        android:layout_marginTop="6dp"
        android:text="Button" />

</RelativeLayout>
